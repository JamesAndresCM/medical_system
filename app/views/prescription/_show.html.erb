<div id="medical-history-show" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="container text-right">
        <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Close</span>
        </button>
      </div>
      <div class="container col-md-12 modal-style">
        <div class="card">
          <div class="card-header text-capitalize">
            Paciente <%= @prescription.user.username %> <%= @prescription.user.last_name %> <%= @prescription.user.last_name_mother %>
          </div>
          <div class="card-header text-capitalize">
            Doctor <%= @prescription.doctor.username %> <%= @prescription.doctor.last_name %> <%= @prescription.doctor.last_name_mother %>
          </div>
          <div class="card-body">
            <h5 class="card-title">Prescripción Médica </h5>
            <p class="card-text justify"><%= @prescription.descripcion %></p>
          </div>
          <div class="card-footer text-muted">
            <b> Fecha: </b><%= @prescription.created_at.strftime("%d-%m-%Y")%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>