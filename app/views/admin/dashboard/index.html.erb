<h2 class="center mt-4">Lista de Usuarios</h2>

<%= link_to 'Crear nuevo usuario', new_user_path, class: 'btn btn-sm btn-success', remote: true, 'data-toggle' => 'modal', 'data-target' => '#user-modal' %>

<div class="mt-3 alert alert-success" role="alert" style="display: none;"></div>
<div class="mt-3 alert alert-danger" role="alert" style="display: none;"></div>
<div class="mt-3 card shadow-style table-responsive">
  <div class="card-body">
    <table id="datatable_user" class="table table-hover table-responsive datatable-style-centered">
      <thead>
      <tr style="color: white; background-color: #2979ff">
        <th>Nombre</th>
        <th>A.Paterno</th>
        <th>A.Materno</th>
        <th>Email</th>
        <th style="width: 80px">Rut</th>
        <th>Telefono</th>
        <th>Role</th>
        <th>Opciones</th>
      </tr>
      </thead>
      <tbody>
        <%= render partial: "user", collection: @users %>
      </tbody>
    </table>
  </div>
</div>