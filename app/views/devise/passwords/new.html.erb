<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="main-color mt-5">
    <%= devise_error_messages! %>
  </div>
  <div class="container">
      <div class="row">
        <div class="col-md-5 div-login main-color">
          <legend class="center">Olvidó su contraseña?</legend>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,class:'form-control input-lg' %>
          </div>
          <div class="actions center">
            <%= f.submit "Enviar instrucciones para resetear mi contraseña" ,class:'btn btn-primary' %>
          </div>
        <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
<% end %>